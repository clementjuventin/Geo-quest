<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iut.projet">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetAndroid">

        <activity android:name=".view.ActivitePrincipale" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.JoinActivity" android:theme="@style/AppTheme" android:parentActivityName=".view.ActivitePrincipale"/>
        <activity android:name=".view.GameActivity" android:theme="@style/AppTheme" android:screenOrientation="portrait" android:parentActivityName=".view.ActivitePrincipale"/>
        <activity android:name=".view.RulesActivity" android:theme="@style/AppTheme" android:parentActivityName=".view.ActivitePrincipale"/>
    </application>

</manifest>