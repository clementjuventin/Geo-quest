<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/describe_image_activity_chrono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="30"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="5"
                android:id="@+id/describe_image_activity_player_suggestion"
                style="@style/textInput"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:hint="@string/describe_image_activity_suggestion">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="15"/>

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/describe_image_activity_readyButton"
                style="@style/ColoredButton"
                android:layout_weight="1"
                android:background="@drawable/ic_send_24px"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/describe_image_activity_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>